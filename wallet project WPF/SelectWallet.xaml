<Window x:Class="wallet_project_WPF.SelectWallet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wallet_project_WPF"
        mc:Ignorable="d"
        Title="SelectWallet" Height="450" Width="800"
        >
    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>



        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
                
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions >

            <Label 
                    FontWeight="Light"
                    FontFamily="helvetica"
                    FontSize="24"
                    Foreground="Black"
                    HorizontalAlignment="Left">Choose wallet:
            </Label>

           

            <Button Grid.Column="2" Height="25" Width="55" HorizontalAlignment="Right" Margin="0,0,20,0" Click="Add_Wallet_Button_Click">Add</Button>

            
            <Button Grid.Column="3" Height="25" Width="55" HorizontalAlignment="Right" Margin="0,0,20,0" Click="Edit_Wallet_Button_Click">Edit</Button>
            <Button Grid.Column="4" Height="25" Width="55" HorizontalAlignment="Center" Click="Remove_Selected_Button_Click">Remove</Button>
        </Grid>

        <ListView BorderThickness="1" BorderBrush="Black" Margin="0,43,0,43" Grid.RowSpan="3" Name="Wallet_List" >
            <ListView.View >
                
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="name" Width="100"  DisplayMemberBinding="{Binding Path=WalletName}"  ></GridViewColumn>
                        <GridViewColumn Header="balance" Width="150" DisplayMemberBinding="{Binding Path=Balance}" ></GridViewColumn>
                    </GridView.Columns>

                </GridView>
            </ListView.View>

            

        </ListView>

        <Button Grid.Row="2"
                Width="60"
                Height="25"
               HorizontalAlignment="Right"
                Margin="0,5,50,5"
                Click="Confirm_Wallet_Button_Click">Confirm</Button>
    </Grid>
</Window>
